@using English_Quiz.Models
@{
    User user = Session[ConstantData.USER_QUIZZ_SESSION] as User;
    List<Quiz> quizSelected = (List<Quiz>)Session["QuizzSelected"];
}


@if (user != null)
{
    <div class="row">
        <div class="col-md-4">
            
            <img src="@string.Format("{0}{1}", Url.Content("~/Content/img/User/"), user.ProfilImage)" class="img-bordered" style="width: 30%;" />
            <span> <b>Welcome :</b> @user.FullName</span>
        </div>
        <div class="col-md-4" style="margin-top: 15px;">
            
            @if (quizSelected != null && !string.IsNullOrEmpty(quizSelected[0].QuizName))
            {
                <span> <b>Quiz Selected :</b> @quizSelected[0].QuizName</span>
            }
            else
            {
                <span> <b>Please Select your Quiz </b></span>
            }
        </div>
        <div class="col-md-4" style="margin-top: 15px;">
            <span> <b>Date :</b> @DateTime.Now</span>
            <span style="margin-left:75px;"><a href="@Url.Action("History","Take_Quiz")">Lịch sử thi</a></span>
        </div>
    </div>
}
