@model English_Quiz.Models.Listening_Type

@{
    ViewBag.Title = "Thêm mới loại bài nghe";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thêm mới loại bài nghe</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Loại bài nghe</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (ViewBag.errorMsg != null)
        {
            <div class="well well-sm well-danger"> @ViewBag.errorMsg </div>
        }
        <div class="form-group">
            <label class="control-label col-md-2">Tên loại bài nghe (Tiếng việt)</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LISTENING_TYPE_NAME_VN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LISTENING_TYPE_NAME_VN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên loại bài nghe (Tiếng anh)</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LISTENING_TYPE_NAME_EN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LISTENING_TYPE_NAME_EN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô tả (Tiếng việt)</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DESCRIPTION_VN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DESCRIPTION_VN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô tả (Tiếng anh)</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DESCRIPTION_EN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DESCRIPTION_EN, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Sắp xếp</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ORDER_BY, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ORDER_BY, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại", "Index")
</div>
