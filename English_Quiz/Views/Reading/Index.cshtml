@model IEnumerable<English_Quiz.Models.Reading>

@{
    ViewBag.Title = "Bài đọc";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Bài đọc</h2>

<p style="margin-left:10px;">
    <a class="btn btn-primary" href='@Url.Action("CreateReading","Reading")'> Thêm mới</a>
</p>
<table class="table">
    <tr>
        <th>
            Bài đọc
        </th>
        <th>
            Loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width:55%">
                @Html.DisplayFor(modelItem => item.READING_TEXT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reading_Type.READING_TYPE_NAME)
            </td>
            <td>
                <a href='@Url.Action("EditQuizType","QuizType", new{ id = item.READING_ID})' class="btn btn-info"><i class="fas fa-edit"></i></a>
                |
                <a href="javascript:void(0)" onclick="deleteQuizType(@item.READING_ID)" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                | <a href="showReadingQuestion(@item.READING_ID)" data-toggle="modal" class="btn btn-dark"><i class="fas fa-plus"></i></a>
            </td>
        </tr>
    }

</table>

<div class="modal fade bd-example-modal-lg" id="modalListQuestion" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Câu hỏi</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="content">

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">

        const deleteQuizType = (id) => {
            Swal.fire({
                title: 'Bạn chắc chắn sẽ xóa?',
                text: "Bạn sẽ không thể khôi phục bản ghi này!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Xóa!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        url: '@Url.Action("DeleteReading","Reading")' + `?id=${id}`,
                        type: 'POST',
                        success: function (data) {
                            if (data.Success) {
                               Swal.fire(
                                    'Deleted!',
                                    data.Message,
                                    'success'
                                )
                                setTimeout(function () { location.reload(); }, 700);

                            }
                            else {
                              Swal.fire(
                                    "Can't Delete",
                                    data.Message,
                                    'error'
                                )
                            }
                        },
                         error: function (error) {
                             alert('Lỗi ajax' + error)
                        },
                        cache: false,
                        processData: false,
                        contentType: false
                    });
                }
            })
        }
        const showReadingQuestion = (id) => {
            $.post("/Reading/getQuestionByReadingId", {
                questionId : id
            }, function (e) {

                    $('#modalListQuestion').modal('show');
            }, "json")
        }
    </script>
}