

@{
    ViewBag.Title = "Chọn loại mẹo";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="page-section bg-primary">
    <div class="container text-center">
        <h2 class="mb-4">Các loại mẹo</h2>
        <hr class="divider light my-4" />
        <div class="row">
            @if (Model != null)
            {
                foreach (var tipType in Model)
                {

                    <div class="col-lg-3 col-md-6 text-center align-self-center">
                        <div class="mt-5">
                            <i class="fas fa-book" style="font-size:48px"></i>
                            <h3 class="h4 mb-2"> <a style="color:black" href='@Url.Action("ListTip","Take_Quiz", new{ tipTypeId = tipType.TIP_TYPE_ID})'>@tipType.TIP_TYPE_NAME</a></h3>
                            <p class="text-white mb-0">@tipType.DESCRIPTION</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
